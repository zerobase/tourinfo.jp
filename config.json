{
  "port": 8145,
  "output": "./public",
  "locals": {
    "lang": "ja",
    "url": "http://tourinfo.jp",
    "name": {
      "ja": "観光情報インフラ整備計画",
      "en": "Tourism Information Infrastructure Initiative"
    },
    "owner": "観光情報インフラ整備計画"
  },
  "plugins": [
    "./plugins/paginator.coffee"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "template": "paginator.jade",
    "perPage": 10,
    "first": "articles/index.html",
    "filename": "articles/%d/index.html"
  }
}
